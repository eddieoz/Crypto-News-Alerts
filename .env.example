# Crypto News Alerts - Configuration
# Copy this file to .env and fill in your values

# ntfy Configuration
NTFY_URL=http://localhost:8080
NTFY_TOKEN=  # Optional: Set if using authenticated ntfy

# Notification Topics
NTFY_TOPIC_CRITICAL=crypto-critical
NTFY_TOPIC_REGULATORY=crypto-regulatory
NTFY_TOPIC_PROTOCOL=crypto-protocol
NTFY_TOPIC_SOCIAL=crypto-social

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Nitter Instances (comma-separated, will rotate on failure)
NITTER_INSTANCES=nitter.net,nitter.privacydev.net,nitter.poast.org

# Collector Settings
CHECK_INTERVAL_RSS=60
CHECK_INTERVAL_NITTER=120
CHECK_INTERVAL_NOSTR=30

# Logging
LOG_LEVEL=INFO

# Timezone
TZ=America/Sao_Paulo
